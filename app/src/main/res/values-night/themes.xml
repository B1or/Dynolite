<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dynolite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple_200</item>
        <item name="colorPrimaryVariant">@color/deep_purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/grey_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/grey_900</item>
    </style>
    <style name="SpeedoStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/grey_800</item>
    </style>
</resources>